{
  "name": "Job Hunt Extension",
  "description": "Follow-up & reply assistant",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["sidePanel", "storage", "tabs"],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "side_panel": {
    "default_path": "sidebar/index.html"
  }
}


